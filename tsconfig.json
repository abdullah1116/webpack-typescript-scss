{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./public",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  }
}
